#include<stdio.h>
int a[110][11000];
int fun(int a[],int m,int n)//判定是否只剩下一个队
{
int i,s=0;
for(i=0;i<n;i++)
   if(i!=m)
    s+=a[i];
    return !s;
}
int main()
{
    int n,i,b[110],max=-999,j,s=0,flag=0;
    scanf("%d",&n);
   for(i=0;i<n;i++)
   {
     scanf("%d",&b[i]);
     b[i]*=10;
       if(max<b[i])
           max=b[i];//记录学校所派出的最大人数
   }
    if(n==1)
        s=-1;//当只有一个队时，应该从1开始排
     for(j=0;j<max;j++)
     {
     for(i=0;i<n;i++)
     {
        if(b[i]!=0)
         {
             if(fun(b,i,n))
            {
               if((i==0&&a[i][j-1]==s)||flag!=0||n==1)
                   a[i][j]=s+=2;
                else if(!flag)
                    a[i][j]=++s;
                flag=1;
             }
             else a[i][j]=++s;
             b[i]--;
        }
     }
     }
   for(i=0;i<n;i++)
   {
      printf("#%d\n",i+1);
      for(j=0;a[i][j];j++)
     {
        printf("%d",a[i][j]);
        if((j+1)%10==0)printf("\n");//每个10个换行一次，否则输出空格。
        else printf(" ");
      }
   }
   return 0;
} 
